<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/revenda?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">publi</property>
    <property name="hibernate.connection.password">publi</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="br.com.agenda.model.Usuario"/>
    <mapping class="br.com.agenda.model.Automovel"/>
    <mapping class="br.com.agenda.model.Cliente"/>
    <mapping class="br.com.agenda.model.Empresa"/>
    <mapping class="br.com.agenda.model.Fornecedor"/>
    <mapping class="br.com.agenda.model.TipoPagamento"/>
    
  </session-factory>
</hibernate-configuration>
